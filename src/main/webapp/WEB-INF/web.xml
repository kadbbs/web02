<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>studentServlet</servlet-name>
    <servlet-class>com.bbs.javaweb.servlet.studentServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>studentServlet</servlet-name>
    <url-pattern>/servlet/student</url-pattern>
  </servlet-mapping>
  <!--a-->
  <servlet>
    <servlet-name>aservlet</servlet-name>
    <servlet-class>com.bbs.javaweb.servlet.aservlet</servlet-class>
<!--    <load-on-startup>1</load-on-startup>  &lt;!&ndash;优先级，会在服务器启动的时候创建对象，一般不用&ndash;&gt;-->
  </servlet>
  <servlet-mapping>
    <servlet-name>aservlet</servlet-name>
    <url-pattern>/a</url-pattern>
  </servlet-mapping>
  <!--b-->
  <servlet>
    <servlet-name>bservlet</servlet-name>
    <servlet-class>com.bbs.javaweb.servlet.bservlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>bservlet</servlet-name>
    <url-pattern>/b</url-pattern>
  </servlet-mapping>
</web-app>
